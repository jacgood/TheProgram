# Environment variables for TheProgram
# Copy this file to .env and fill in your values

# LDAP Configuration
LDAP_URL=ldap://your-ldap-server:389/your-search-base
LDAP_BIND_DN=cn=your-bind-user,cn=Users,ou=YourOU,dc=YourDomain,dc=COM
LDAP_BIND_PASSWORD=your-secure-password
LDAP_GROUP=cn=YourGroup,ou=Groups,dc=YourDomain,dc=COM

# SSL Configuration
# For wfd.goodvaluation.com
SSL_CERT_FILE=wfd.goodvaluation.com.crt
SSL_KEY_FILE=wfd.goodvaluation.com.key
# For main site (www.goodvaluation.com)
MAIN_SSL_CERT_FILE=server.crt
MAIN_SSL_KEY_FILE=server.key

# Server Configuration
SERVER_NAME=your-server-name.example.com
